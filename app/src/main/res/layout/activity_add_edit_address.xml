<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- ðŸ—ºï¸ Khu vá»±c báº£n Ä‘á»“ + FAB (70%) -->
    <FrameLayout
        android:id="@+id/mapContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7">

        <!-- Mapbox -->
        <com.mapbox.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:mapbox_cameraZoom="13"
            app:mapbox_cameraTargetLat="10.762622"
            app:mapbox_cameraTargetLng="106.660172" />

        <!-- ðŸ”˜ NÃºt xÃ¡c Ä‘á»‹nh vá»‹ trÃ­ GPS (gÃ³c pháº£i dÆ°á»›i báº£n Ä‘á»“) -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabLocate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:contentDescription="XÃ¡c Ä‘á»‹nh vá»‹ trÃ­ hiá»‡n táº¡i"
            android:src="@android:drawable/ic_menu_mylocation"
            app:backgroundTint="#FFFF6B35"
            app:maxImageSize="40dp"
            android:elevation="8dp" />
    </FrameLayout>

    <!-- ðŸ“‹ Form nháº­p Ä‘á»‹a chá»‰ (30%) -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/formContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/bg_glass_card_white"
            android:elevation="12dp">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add / Edit Address"
                android:textColor="#FFFF6B35"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/etAddressLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="10dp"
                android:background="@drawable/bg_edittext_orange"
                android:textColor="#000000"
                android:textColorHint="#88000000"
                android:hint="Address Line"
                android:inputType="textCapWords"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/etCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="10dp"
                android:background="@drawable/bg_edittext_orange"
                android:textColor="#000000"
                android:textColorHint="#88000000"
                android:hint="City"
                android:inputType="textCapWords"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/etDistrict"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="10dp"
                android:background="@drawable/bg_edittext_orange"
                android:textColor="#000000"
                android:textColorHint="#88000000"
                android:hint="District"
                android:inputType="textCapWords"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/etWard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="10dp"
                android:background="@drawable/bg_edittext_orange"
                android:textColor="#000000"
                android:textColorHint="#88000000"
                android:hint="Ward"
                android:inputType="textCapWords"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Set as Default"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <Switch
                    android:id="@+id/switchDefault"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:thumbTint="#FFFF6B35"
                    android:trackTint="#33FF6B35" />
            </LinearLayout>

            <Button
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save Address"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:backgroundTint="#FFFF6B35"
                android:layout_marginTop="12dp"
                android:elevation="6dp" />
        </LinearLayout>
    </ScrollView>

    <!-- â³ Loading overlay -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:indeterminateTint="#FFFF6B35"
        android:visibility="gone" />
</LinearLayout>
