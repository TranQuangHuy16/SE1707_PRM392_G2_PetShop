<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingVertical="4dp">

    <LinearLayout
        android:id="@+id/otherRowContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginEnd="60dp"
        android:gravity="start|bottom"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layoutOther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_message_other_modern"
            android:gravity="start"
            android:padding="12dp">

            <TextView
                android:id="@+id/tvOtherMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello!"
                android:textColor="#000000"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvOtherTimestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="#888888"
            android:textSize="10sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/myRowContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginStart="60dp"
        android:layout_marginTop="4dp"
        android:gravity="end|bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvMyTimestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:textColor="#888888"
            android:textSize="10sp" />

        <LinearLayout
            android:id="@+id/layoutMe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_message_me_modern"
            android:gravity="end"
            android:padding="12dp">

            <TextView
                android:id="@+id/tvMyMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hi there!"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>