<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/admin_nav_graph"
    app:startDestination="@id/nav_admin_dashboard">

    <fragment
        android:id="@+id/nav_admin_dashboard"
        android:name="com.example.se1707_prm392_g2_petshop.ui.admin.dashboard.AdminDashboardFragment"
        android:label="Admin Dashboard"
        tools:layout="@layout/fragment_admin_dashboard" >
        <action
            android:id="@+id/action_adminDashboardFragment_to_manageProductsFragment"
            app:destination="@id/nav_admin_products" />
        <action
            android:id="@+id/action_adminDashboardFragment_to_manageUsersFragment"
            app:destination="@id/nav_admin_users" />
        <action
            android:id="@+id/action_adminDashboardFragment_to_viewOrdersFragment"
            app:destination="@id/nav_admin_orders" />

    </fragment>

    <fragment
        android:id="@+id/nav_admin_products"
        android:name="com.example.se1707_prm392_g2_petshop.ui.admin.products.list.AdminProductsFragment"
        android:label="Products"
        tools:layout="@layout/fragment_admin_products" >
        <action
            android:id="@+id/action_adminProducts_to_productManage"
            app:destination="@id/nav_product_manage"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"/>
    </fragment>
    <fragment
        android:id="@+id/nav_product_manage"
        android:name="com.example.se1707_prm392_g2_petshop.ui.admin.products.manage.ProductManageFragment"
        android:label="Manage Product"
        tools:layout="@layout/fragment_manage_product">
        <argument
            android:name="productId"
            app:argType="integer"/>
    </fragment>

    <fragment
        android:id="@+id/nav_admin_orders"
        android:name="com.example.se1707_prm392_g2_petshop.ui.admin.orders.AdminOrdersFragment"
        android:label="Orders"
        tools:layout="@layout/fragment_admin_orders" />

    <fragment
        android:id="@+id/nav_admin_users"
        android:name="com.example.se1707_prm392_g2_petshop.ui.admin.users.list.AdminUsersFragment"
        android:label="Users"
        tools:layout="@layout/fragment_admin_users" />

    <fragment
        android:id="@+id/nav_admin_chat"
        android:name="com.example.se1707_prm392_g2_petshop.ui.admin.chat.AdminChatFragment"
        android:label="Chat"
        tools:layout="@layout/fragment_admin_chat" />

    <fragment
        android:id="@+id/nav_admin_settings"
        android:name="com.example.se1707_prm392_g2_petshop.ui.admin.settings.AdminSettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_admin_settings" />

</navigation>
