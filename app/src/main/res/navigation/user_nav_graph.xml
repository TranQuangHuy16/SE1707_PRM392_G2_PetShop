<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/user_nav_graph"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.se1707_prm392_g2_petshop.ui.user.main.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_home_to_product_detail"
            app:destination="@id/navigation_product_detail" />
        <action
            android:id="@+id/action_home_to_product_list"
            app:destination="@id/navigation_product_list">

            <argument
                android:name="categoryId"
                app:argType="integer" />
            <argument
                android:name="categoryName"
                app:argType="string" />

        </action>
        <action
            android:id="@+id/action_home_to_product_list_all"
            app:destination="@id/navigation_product_list" />
    </fragment>

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.se1707_prm392_g2_petshop.ui.user.main.notifications.NotificationsFragment"
        android:label="Notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_cart"
        android:name="com.example.se1707_prm392_g2_petshop.ui.user.main.cart.CartFragment"
        android:label="Cart"
        tools:layout="@layout/fragment_cart" />
    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.se1707_prm392_g2_petshop.ui.user.main.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/navigation_product_detail"
        android:name="com.example.se1707_prm392_g2_petshop.ui.product.productDetail.ProductDetailFragment"
        android:label="Product Detail"
        tools:layout="@layout/fragment_product_detail">

        <argument
            android:name="productId"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/navigation_product_list"
        android:name="com.example.se1707_prm392_g2_petshop.ui.product.productList.ProductListFragment"
        android:label="Products"
        tools:layout="@layout/fragment_product_list">

        <argument
            android:name="categoryId"
            app:argType="integer"
            android:defaultValue="-1" />

        <argument
            android:name="categoryName"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />

        <action
            android:id="@+id/action_product_list_to_product_detail"
            app:destination="@id/navigation_product_detail" />
    </fragment>

</navigation>