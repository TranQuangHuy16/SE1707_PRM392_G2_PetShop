<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#CFCFCF"/> <!-- xám đậm hơn khi nhấn -->
            <corners android:radius="20dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#D9D9D9"/> <!-- xám nhạt hơn khi bình thường -->
            <corners android:radius="20dp"/>
        </shape>
    </item>
</selector>
