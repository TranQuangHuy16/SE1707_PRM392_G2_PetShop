<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Khi focus -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <!-- nền cam trong suốt nhẹ -->
            <solid android:color="#26FF6B35" /> <!-- 15% cam -->
            <stroke android:width="2dp" android:color="#FF6B35" /> <!-- cam chính -->
            <corners android:radius="10dp" />
        </shape>
    </item>

    <!-- Mặc định -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1AFFFFFF" /> <!-- nền trắng trong suốt nhẹ -->
            <stroke android:width="1dp" android:color="#66FF6B35" /> <!-- viền cam mờ -->
            <corners android:radius="10dp" />
        </shape>
    </item>
</selector>
