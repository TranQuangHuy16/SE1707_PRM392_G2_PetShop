<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    
    <!-- Border màu cam -->
    <stroke
        android:width="1.5dp"
        android:color="@color/orange" />
    
    <!-- Background trong suốt hoặc màu nhạt -->
    <solid android:color="#FFFFF5E6" />
    
    <!-- Bo tròn góc -->
    <corners android:radius="6dp" />
    
    <!-- Padding bên trong -->
    <padding
        android:left="8dp"
        android:top="4dp"
        android:right="8dp"
        android:bottom="4dp" />
</shape>
