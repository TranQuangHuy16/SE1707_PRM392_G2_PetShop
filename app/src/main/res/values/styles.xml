<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Text Input Layout Style -->
    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/orange</item>
        <item name="boxStrokeErrorColor">@color/status_cancelled</item>
        <item name="hintTextColor">@color/orange</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Text Input Edit Text Style -->
    <style name="Widget.App.TextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:background">@color/white</item>
    </style>

    <!-- Button Style -->
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/orange</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- Card View Style -->
    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">12dp</item>
    </style>
</resources>
